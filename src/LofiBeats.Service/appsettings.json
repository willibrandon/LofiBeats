{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "LofiBeats.Service.WebSocket": "Information"
    }
  },
  "AllowedHosts": "*",
  "Telemetry": {
    "IsEnabled": false,
    "EnableLocalFile": true,
    "EnableSeq": false,
    "SeqServerUrl": "http://localhost:5341",
    "MaxBufferSize": 100,
    "FlushIntervalMinutes": 1,
    "MaxFileSizeMB": 10,
    "MaxFileAgeDays": 30,
    "IsTestEnvironment": false
  },
  "WebSocket": {
    "EndpointPath": "/ws",
    "KeepAliveIntervalSeconds": 30,
    "MaxMessageSize": 32768,
    "RequireAuthentication": true,
    "AuthToken": "CHANGE_ME_IN_PRODUCTION",
    "MaxConcurrentConnections": 50,
    "MessageRateLimit": 5
  },
  "AudioSettings": {
    "DefaultTempo": 80,
    "DefaultDelayMs": 250
  },
  "PluginSettings": {
    "RunOutOfProcess": true,
    "HostStartupTimeoutSeconds": 5,
    "MaxRestartAttempts": 3,
    "AutoRestartFailedHosts": true,
    "RestartDelayMilliseconds": 1000
  }
}
